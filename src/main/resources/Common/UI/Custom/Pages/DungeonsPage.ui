Group {
  Anchor: (Width: 700, Height: 420);
  Background: #141c26(0.98);
  LayoutMode: Top;
  Padding: (Full: 12);

  Label #HeaderTitle {
    Text: "DUNGEONS";
    Anchor: (Height: 36);
    Style: (FontSize: 18, TextColor: #ffffff, HorizontalAlignment: Center, RenderBold: true);
  }

  Group { Anchor: (Height: 8); }

  Group {
    LayoutMode: Left;
    Anchor: (Height: 320);

    Group {
      Anchor: (Width: 300);
      LayoutMode: Top;

      Label { Text: "Available Dungeons"; Anchor: (Height: 24); Style: (FontSize: 14, TextColor: #cccccc); }

      /* Parser-safe list container: no Fill usage */
      Group #DungeonList {
        LayoutMode: Top;
        /* If you want this to take the vertical space, make parent children combine with explicit sizes or use FlexWeight on siblings */
      }
    }

    Group {
      /* Use FlexWeight to take remaining horizontal space instead of Anchor Fill */
      FlexWeight: 1;
      LayoutMode: Top;

      Label { Text: "Preview"; Anchor: (Height: 24); Style: (FontSize: 14, TextColor: #cccccc); }

      Group #PreviewImageArea { Anchor: (Height: 180); Background: #000000(0.06); }

      Label #PreviewDescription {
        Text: "Select a dungeon to see details";
        Style: (FontSize: 13, TextColor: #aaaaaa);
        Anchor: (Height: 24);
      }
    }
  }

  Group { Anchor: (Height: 12); }

  Group {
    LayoutMode: Left;
    Anchor: (Height: 36);

    Group { FlexWeight: 1; }

    TextButton #CloseButton {
      Text: "Close";
      Anchor: (Width: 120, Height: 28);
    }
  }
}