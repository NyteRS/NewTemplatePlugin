Group #ScoreboardRoot {
  // Right-aligned container. We center the content vertically using flexible spacers.
  Anchor: (Right: 6);
  LayoutMode: Top;
  Padding: (Full: 0);

  // Top flexible spacer (pushes the HUD down)
  Group { FlexWeight: 1; }

  // Outer outline (acts as a border)
  Group #ScoreboardOutline {
    Anchor: (Width: 220);
    LayoutMode: Top;
    Padding: (Full: 2);                // border thickness
    Background: #000000(0.65);        // border color + alpha (opaque border)
  }

  // Inner transparent area (slightly smaller than the outline)
  Group #ScoreboardInner {
    Anchor: (Width: 214);
    LayoutMode: Top;
    Padding: (Full: 8);
    Background: #000000(0.0);         // fully transparent interior
  }

  // The actual items inside the inner transparent area.
  // Server name at the top (yellow/gold)
  Label #ServerName {
    Text: "SERVER NAME";
    Anchor: (Height: 20);
    Style: (FontSize: 16, TextColor: #FFD23A, RenderBold: true);
  }

  // Small spacer
  Group { Anchor: (Height: 6); }

  // Title (optional, small)
  Label #Header {
    Text: "PLAYER";
    Anchor: (Height: 14);
    Style: (FontSize: 12, TextColor: #cccccc, RenderBold: true);
  }

  Group { Anchor: (Height: 4); }

  // Main info lines (these will be updated by the Java wrapper)
  Label #Gold {
    Text: "Gold: 0";
    Anchor: (Height: 16);
    Style: (TextColor: #FFD700);
  }

  Label #Rank {
    Text: "Rank: Member";
    Anchor: (Height: 16);
    Style: (TextColor: #ffffff);
  }

  Label #Playtime {
    Text: "Playtime: 0m";
    Anchor: (Height: 16);
    Style: (TextColor: #ffffff);
  }

  Label #Coords {
    Text: "Coords: 0, 0, 0";
    Anchor: (Height: 16);
    Style: (TextColor: #ffffff);
  }

  Group { Anchor: (Height: 6); }

  // Footer / small url or server message
  Label #Footer {
    Text: "www.example.server";
    Anchor: (Height: 14);
    Style: (TextColor: #999999);
  }

  // Bottom flexible spacer (pushes the HUD up), together with the top spacer centers vertically
  Group { FlexWeight: 1; }
}