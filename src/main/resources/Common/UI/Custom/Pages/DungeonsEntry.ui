Group {
  LayoutMode: Left;
  Anchor: (Height: 56);
  Padding: (Full: 6);

  /* Left: labels stacked */
  Group {
    FlexWeight: 1;
    LayoutMode: Top;

    Label #DungeonName {
      Text: "Dungeon name";
      Anchor: (Height: 20);
      Style: (FontSize: 13, TextColor: #ffffff, RenderBold: true, VerticalAlignment: Center);
    }

    Label #DungeonSummary {
      Text: "Summary";
      Anchor: (Height: 18);
      Style: (FontSize: 11, TextColor: #bfc9d9);
    }
  }

  /* Small spacer */
  Group { Anchor: (Width: 8); }

  /* Select button (explicit width so labels don't overlap it) */
  TextButton #SelectButton {
    Text: "Select";
    Anchor: (Width: 86, Height: 32);
  }
}