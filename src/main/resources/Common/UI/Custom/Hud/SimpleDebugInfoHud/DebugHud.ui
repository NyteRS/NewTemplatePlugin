Group {
    // Anchored to middle-right of the screen (adjust the numeric offsets to taste)
    Anchor: (Right: 10, Middle: 0, Width: 220, Height: 175);
    Background: #000000(0.7);
    LayoutMode: Top;
    Padding: (Horizontal: 10, Vertical: 8);

    Label #TitleLabel {
        Text: "Darkvale";
        Anchor: (Height: 22);
        Style: (FontSize: 16, TextColor: #00ccff, RenderBold: true);
    }

    Label #PosXLabel {
        Text: "X: 0";
        Anchor: (Height: 17);
        Style: (FontSize: 13, TextColor: #ffffff);
    }

    Label #PosYLabel {
        Text: "Y: 0";
        Anchor: (Height: 17);
        Style: (FontSize: 13, TextColor: #ffffff);
    }

    Label #PosZLabel {
        Text: "Z: 0";
        Anchor: (Height: 17);
        Style: (FontSize: 13, TextColor: #ffffff);
    }

    Label #ChunkLabel {
        Text: "Chunk: 0, 0";
        Anchor: (Height: 17);
        Style: (FontSize: 13, TextColor: #aaaaaa);
    }

    Label #BiomeLabel {
        Text: "Biome: Unknown";
        Anchor: (Height: 17);
        Style: (FontSize: 13, TextColor: #88cc88);
    }

    Label #HealthLabel {
        Text: "Rank: Member";
        Anchor: (Height: 17);
        Style: (FontSize: 13, TextColor: #ffffff);
    }

    Label #StaminaLabel {
        Text: "Playtime: 0m";
        Anchor: (Height: 17);
        Style: (FontSize: 13, TextColor: #ffffff);
    }

    Label #ManaLabel {
        Text: "www.darkvale.com";
        Anchor: (Height: 17);
        Style: (FontSize: 12, TextColor: #cccccc);
    }
}